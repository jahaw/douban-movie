extends ../layout

block content
  .container
    .row(style="margin-bottom:50px")
      .col-md-12
        each cat in categories
          .panel.panel-default
            .panel-heading.clearfix(style="position:relative")
              h3
                a(href="/results?cat=#{cat._id}&p=0") #{cat.name}
              if cat.movies && cat.movies.length >= 4
                a(href="/results?cat=#{cat._id}&p=0",style="position: absolute;right: 15px;top:35px;font-size:14px;") MORE >>
            .panel-body
              if cat.movies && cat.movies.length>0
                .row
                  each item in cat.movies
                    .col-md-2.col-xs-4
                      .thumbnail
                        a(href="/movie/#{item._id}")
                          if item.poster.indexOf('http') > -1
                            img(src="#{item.poster}", alt="#{item.title}", style="height:350px;")
                          else
                            img(src="/upload/#{item.poster}",alt="#{item.title}", style="height:350px;")
                        .caption
                          h5 #{item.title}
                          .rating
                            div
                              .rating-num
                                span(style="color: #9b9b9b") 豆瓣评分: &nbsp;
                                strong #{item.rating}
                                .rating-img.star

                          p: a.btn.btn-primary(href="/movie/#{item._id}",role="button")
                            | 观看预告片



